<%= form_with model: @location, local: true do |form| %>
  <% if  @location.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(location.errors.count, "error") %>
          prohibited this location from being saved:
      </h2>
      <ul>
        <% @location.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :short_name %>
    <%= form.text_field :short_name %>
    <%= form.label :name %>
    <%= form.text_field :name %>  
    <%= form.hidden_field :team_id, value: current_team.id %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
