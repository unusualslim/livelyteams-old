<%= form_with model: @tag, local: true do |form| %>
  <% if  @tag.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(tag.errors.count, "error") %>
          prohibited this tag from being saved:
      </h2>
      <ul>
        <% @tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>  
  </p>
      <%= form.hidden_field :team_id, value: current_team.id %>
  <p>
    <%= form.submit %>
  </p>

<% end %>
